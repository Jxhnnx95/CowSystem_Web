@model IEnumerable<VacaViewModel>
@{
    ViewData["Title"] = "Vacas";
}
<div class="content-section">
    <div class="content-section-head">
        <div class="row justify-content-between">
            <div class="col-6 col-sm-4">
                @ViewData["Title"]
            </div>
            <div class="col-6 col-sm-2">
                <a asp-action="Create" class="btn btn-block btn-success"><i class="lni lni-circle-plus"></i> Agregar</a>
            </div>
        </div>
    </div>
    <div class="content-section-body">
        <div class="row justify-content-center">

            <div class="col-12">
                <div class="table-responsive">
                    <table id="tablaVaca" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.Codigo)</th>
                                <th>@Html.DisplayNameFor(model => model.EstadoString)</th>
                                <th>@Html.DisplayNameFor(model => model.PartosString)</th>
                                <th>@Html.DisplayNameFor(model => model.EdadString)</th>
                                <th>@Html.DisplayNameFor(model => model.ValorString)</th>
                                <th>@Html.DisplayNameFor(model => model.UltimaActualizacion)</th>
                                <th>Detalles</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Codigo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EstadoString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PartosString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EdadString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ValorString)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UltimaActualizacion)
                                </td>
                                <td style="text-align:center;"><a asp-action="Details" class="btn btn-success" asp-route-id="@item.IdGanado"><i class="lni lni-harddrive"></i></a></td>
                                <td style="text-align:center;"><a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.IdGanado"><i class="lni lni-pencil-alt"></i></a></td>
                                <td style="text-align:center;"><a asp-action="Delete" class="btn btn-danger delete" data-title="¿Eliminar este elemento?" asp-route-id="@item.IdGanado"><i class="lni lni-trash"></i></a></td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

