@model IEnumerable<TipoGanadoViewModel>
@{
    ViewData["Title"] = "Tipo de ganado";
}
    <div class="listTable">
        <div class="listTable-head">
            <div class="row justify-content-between">
                <div class="col-6 col-sm-4">
                    @ViewData["Title"]
                </div>
                <div class="col-6 col-sm-2">
                    <a asp-action="Create" class="btn btn-block btn-success">Agregar</a>
                </div>
            </div>
        </div>
        <div class="listTable-body">
            <div class="row justify-content-center">

                <div class="col-12">
                    <table id="tablaTipoGanado" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(model => model.IdTipoGanado)</th>
                                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                                <th>@Html.DisplayNameFor(model => model.UltimaActualizacion)</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdTipoGanado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UltimaActualizacion)
                                    </td>
                                    <td><a asp-action="Edit" class="btn btn-primary btn-block" asp-route-id="@item.IdTipoGanado"><i class="lni lni-pencil-alt"></i></a></td>
                                    <td><a asp-action="Delete" class="btn btn-danger btn-block" asp-route-id="@item.IdTipoGanado"><i class="lni lni-trash"></i></a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    