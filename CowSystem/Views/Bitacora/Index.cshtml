@model IEnumerable<BitacoraViewModel>
@{
    ViewData["Title"] = "Bitácora";
}
    <div class="content-section">
        <div class="content-section-head">
            <div class="row justify-content-between">
                <div class="col-6 col-sm-4">
                    @ViewData["Title"]
                </div>
                <div class="col-6 col-sm-2">
                    <a asp-action="DeleteAll" data-title="¿Limpiar la bitacora?" class="btn btn-block delete btn-danger"><i class="lni lni-trash"></i> Limpiar Bitácora</a>
                </div>
            </div>
        </div>
        <div class="content-section-body">
            <div class="row justify-content-center">

                <div class="col-12">
                    <div class="table-responsive">
                        <table id="tablaBitacora" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Ganado)</th>
                                    <th>@Html.DisplayNameFor(model => model.Gasto)</th>
                                    <th>@Html.DisplayNameFor(model => model.TipoBalance)</th>
                                    <th>@Html.DisplayNameFor(model => model.Usuario)</th>
                                    <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ganado)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Gasto)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoBalance)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Usuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FechaRegistro)
                                    </td>
                                    <td style="text-align:center;"><a asp-action="Delete" class="btn btn-danger delete" data-title="¿Eliminar este elemento?" asp-route-id="@item.IdRegistro"><i class="lni lni-trash"></i></a></td>
                                </tr>
                                }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
        </div>
    </div>
    
    